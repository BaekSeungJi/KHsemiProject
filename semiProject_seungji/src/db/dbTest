DROP TABLE MEMBER
CASCADE CONSTRAINTS;

CREATE TABLE MEMBER(
   ID VARCHAR2(50) PRIMARY KEY,
   PWD VARCHAR2(50) NOT NULL,
   NAME VARCHAR2(50) NOT NULL,
   EMAIL VARCHAR2(50) UNIQUE,
   PHONE VARCHAR2(50) NOT NULL,
   BLACKLIST NUMBER(1) NOT NULL,   
   AUTH NUMBER(1) NOT NULL
);

